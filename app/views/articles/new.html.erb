<div class="container">
  <h1>Create new Article</h1>

  <div style="width: 400px">
    <%= form_for(@article) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <%= f.submit class: 'btn btn-primary' %>
      <%end%>
  </div>
</div>
